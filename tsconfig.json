{
  "include": [
    "src/**/*.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "rootDir": "src"
  }
}
